{
  "dashboard": {
    "id": null,
    "uid": "k8s-cluster-overview",
    "title": "Kubernetes Cluster Overview",
    "tags": ["kubernetes", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "timeseries",
        "title": "Cluster CPU Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "100 * (1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "timeseries",
        "title": "Cluster Memory Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "100 * (1 - (sum(node_memory_MemAvailable_bytes) / sum(node_memory_MemTotal_bytes)))",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
        "type": "piechart",
        "title": "Pod Count by Namespace",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(kube_pod_info) by (namespace)",
            "legendFormat": "{{namespace}}",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 8 },
        "type": "stat",
        "title": "Node Status",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(kube_node_status_condition{condition=\"Ready\",status=\"true\"})",
            "legendFormat": "Ready Nodes",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "count(kube_node_info)",
            "legendFormat": "Total Nodes",
            "instant": true,
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "green", "value": 2 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
        "type": "table",
        "title": "Failed Pods",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "kube_pod_status_phase{phase=\"Failed\"} > 0",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "namespace": "Namespace",
                "pod": "Pod Name"
              }
            }
          }
        ]
      }
    ]
  }
}